<% config = expression_button_config(expression) %>

<%= button_to expressions_path(config[:params]),
      id: "expression_link_#{expression.id}",
      class: "expression-item text-decoration-none text-dark",
      data: config[:data] do %>
  <div class="rounded <%= config[:active_class] %>">
    <%= image_tag(cdn_image_url(expression.image.variant(:display)), class: "img-thumbnail") %>
  </div>
<% end %>
