<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6 col-xl-5">
      
      <h2 class="text-center mb-4 fw-bold">アカウント設定</h2>

      <div class="card shadow-sm">
        <div class="card-body p-4">

          <% if resource.login_id.present? %>
            <div class="mb-4 text-center border-bottom pb-3">
              <span class="fw-bold text-dark me-2">プロフィール編集</span>
              <span class="text-muted mx-1">|</span>
              <%= link_to "パスワード変更はこちら", edit_password_settings_path, class: "text-decoration-none" %>
            </div>
          <% else %>
            <div class="alert alert-info d-flex align-items-center mb-4" role="alert">
              <i class="bi bi-info-circle-fill me-2"></i>
              <div>
                ログインIDが設定できます。
              </div>
            </div>
          <% end %>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="mb-3">
              <%= f.label :login_id, "ログインID", class: "form-label fw-bold" %>
              <%= f.text_field :login_id, autofocus: true, class: "form-control", placeholder: "例: user123" %>
              <div class="form-text">半角英数字で入力してください。</div>
            </div>

            <div class="mb-3">
              <%= f.label :email, "メールアドレス", class: "form-label fw-bold" %>
              <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "example@email.com" %>
            </div>

            <% if resource.login_id.present? %>
              <div class="mb-4">
                <%= f.label :current_password, class: "form-label fw-bold" %>
                <span class="badge bg-secondary ms-1">必須</span>
                <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
                <div class="form-text text-muted">本人確認のため、現在のパスワードを入力してください。</div>
              </div>
            <% end %>

            <div class="d-grid mt-4">
              <%= f.submit resource.login_id.blank? ? "設定を完了する" : "更新する", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>

        </div>
      </div>

      <div class="text-center mt-3">
        <%= link_to "トップページに戻る", root_path, class: "text-decoration-none text-muted small" %>
      </div>

    </div>
  </div>
</div>
