<% provide(:title, "パスワード変更") %>
<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6 col-xl-5">

      <h2 class="text-center mb-4 fw-bold"><%= yield(:title) %></h2>

      <div class="card shadow-sm">
        <div class="card-body p-4">

          <div class="mb-4 text-center border-bottom pb-3">
            <%= link_to "プロフィール編集", edit_user_registration_path, class: "text-decoration-none text-muted" %>
            <span class="mx-2 text-muted">|</span>
            <span class="fw-bold text-dark">パスワード変更</span>
          </div>

          <%= form_for(resource, as: resource_name, url: update_password_settings_path, html: { method: :patch }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="mb-3">
              <div class="d-flex justify-content-between align-items-center mb-1">
                <%= f.label :password, "新しいパスワード", class: "form-label fw-bold mb-0" %>
                <% if @minimum_password_length %>
                  <span class="badge bg-light text-dark border">
                    <%= @minimum_password_length %>文字以上
                  </span>
                <% end %>
              </div>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
            </div>

            <div class="mb-4">
              <%= f.label :password_confirmation, "新しいパスワード（確認用）", class: "form-label fw-bold" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>

            <hr class="my-4 text-secondary">

            <div class="mb-3">
              <%= f.label :current_password, "現在のパスワード", class: "form-label fw-bold" %>
              <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
              <div class="form-text text-muted">変更を適用するには現在のパスワードが必要です。</div>
            </div>

            <div class="d-grid">
              <%= f.submit "パスワードを更新する", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>

        </div>
      </div>
      
      <div class="text-center mt-3">
        <%= link_to "トップページへ戻る", root_path, class: "text-decoration-none text-muted small" %>
      </div>

    </div>
  </div>
</div>
