<%- if controller_name != 'sessions' %>
  <p class="mb-1"><%= link_to "ログインはこちら", new_session_path(resource_name), class: "text-decoration-none" %></p>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <p class="mb-1"><%= link_to "新規登録はこちら", new_registration_path(resource_name), class: "text-decoration-none" %></p>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <p class="mb-1"><%= link_to "パスワードをお忘れの方はこちら", new_password_path(resource_name), class: "text-decoration-none text-muted" %></p>
<% end %>

<%- if devise_mapping.confirmable? || devise_mapping.lockable? %>
  <div class="mt-3 text-center">
    <a class="text-muted small text-decoration-none dropdown-toggle" data-bs-toggle="collapse" href="#troubleLinks" role="button" aria-expanded="false" aria-controls="troubleLinks">
      メールが届かない・その他のお困りごと
    </a>

    <div class="collapse mt-2" id="troubleLinks">
      <div class="card card-body bg-light border-0 small py-2">
        
        <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
          <div class="mb-1">
            <%= link_to "本人確認メールの再送", new_confirmation_path(resource_name), class: "text-decoration-none text-secondary" %>
          </div>
        <%- end %>

        <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
          <div class="mb-0">
            <%= link_to "アカウントロック解除メールの再送", new_unlock_path(resource_name), class: "text-decoration-none text-secondary" %>
          </div>
        <%- end %>

      </div>
    </div>
  </div>
<%- end %>

<%- if devise_mapping.omniauthable? %>
  <hr class="my-4">
  <%- resource_class.omniauth_providers.each do |provider| %>
    <div class="d-grid mb-2">
      <%= button_to "#{OmniAuth::Utils.camelize(provider)}でログイン", omniauth_authorize_path(resource_name, provider), 
          data: { turbo: false }, 
          class: "btn btn-outline-dark" %>
    </div>
  <% end %>
<% end %>
