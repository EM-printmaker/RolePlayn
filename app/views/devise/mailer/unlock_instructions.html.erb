<div style="font-family: sans-serif; color: #333; max-width: 600px; margin: 0 auto; padding: 20px; border: 1px solid #e9e9e9; border-radius: 8px;">
  <h2 style="color: #2c3e50; text-align: center; border-bottom: 2px solid #e74c3c; padding-bottom: 10px;">
    <%= t(".subject") %>
  </h2>
  <p>
    <%= t(".greeting", recipient: @resource.email) %>
  </p>
  <p>
    <%= t(".message") %>
  </p>
  <p>
    <%= t(".instruction") %>
  </p>
  <div style="text-align: center; margin: 40px 0;">
    <%= link_to t(".action"), 
        unlock_url(@resource, unlock_token: @token), 
        style: "background-color: #e74c3c; color: white; padding: 15px 25px; text-decoration: none; font-weight: bold; border-radius: 5px; display: inline-block;" %>
  </div>
</div>
